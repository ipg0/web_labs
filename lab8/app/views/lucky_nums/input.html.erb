<style>
    input {
        margin-bottom: 10px;
    }
</style>

<%= form_tag(lucky_nums_view_path, method: "post", style: "width: 400px; padding: 50px") do |f| %>
    <%= label_tag "from", "From" %>
    <%= number_field_tag('from', 0, class: "form-control col-12", min: 0, max: 999999, required: true) %>
    <%= label_tag "to", "To" %>
    <%= number_field_tag('to', 999999, class: "form-control col-12", min: 0, max: 999999, required: true) %>
    <%= submit_tag("Calculate Lucky Numbers!", class: "btn btn-primary col-12") %>
<% end %>