<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<style>
    input {
        margin-bottom: 10px;
    }
</style>

<%= form_tag('/lucky_nums/view', class: "col-2", method: "post", style: "padding: 50px") do |f| %>
    <%= label_tag "from", "From" %>
    <%= number_field_tag('from', 0, class: "form-control", min: 0, max: 999999, required: true) %>
    <%= label_tag "to", "To" %>
    <%= number_field_tag('to', 999999, class: "form-control", min: 0, max: 999999, required: true) %>
    <%= submit_tag("Calculate Lucky Numbers!", class: "btn btn-primary") %>
<% end %>