<% flash[:notice]&.tap do |notice| %>
    <div class="alert alert-success"><%= notice %></div>
<% end %>
<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Is Admin?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? 'Yes' : 'No' %>
        <td><%= link_to 'Show', user, class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style="width: 200px">
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary col-12', style: 'margin-bottom: 5px' %>
  <%= button_to 'Sign out', {controller: :sessions, action: :destroy, id: session[:session_id]}, method: :delete, class: 'btn btn-secondary col-12'%>
</div>